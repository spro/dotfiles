alias serve="python -m SimpleHTTPServer"

alias qp="osascript ~/Scripts/quicktime_play.as"
alias qs="osascript ~/Scripts/quicktime_stop.as"

alias now="date +%Y%m%d%H%M%S"
alias note="vim ~/Dropbox/Notes/$(date +%Y-%m-%d).txt"

alias shell="python -i -c 'from core.data import *'"
alias bshell="bpython -i -c 'from core.data import *'"

alias clean="find . -type f -name '*.pyc' -delete; find . -type f -name '*.swp' -delete; find . -type f -name '*~' -delete;"

localtunnel () { ssh -nNT -R 9010:localhost:$@ prontotype.us; }
